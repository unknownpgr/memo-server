{
  "entryFile": "src/main.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "**/controller.ts"
  ],
  "spec": {
    "outputDirectory": ".",
    "specVersion": 3,
    "basePath": "/api",
    "specFileBaseName": "openapi"
  },
  "routes": {
    "basePath": "/api",
    "routesDir": "src/router",
    "middleware": "koa"
  }
}